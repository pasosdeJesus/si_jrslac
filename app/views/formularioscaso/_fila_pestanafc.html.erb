<% f.object = ::Pestanafc.new() if !f.object  %>
<tr class='nested-fields'>
  <td>
    <%= f.input :titulo, 
      label: false 
    %>
  </td>
  <td>
    <%= f.input :orden, 
      label: false 
    %>
  </td>
  <td>
    <% op = ::Ability.parciales_fichacaso %>
    <% op += Mr519Gen::Formulario.all.map { |f| 
      "Formulario::#{f.nombre}" } %>
    <%= f.input :parcial, 
      collection: op,
      label: false 
    %>
  </td>
  <td>
    <%= f.input :formulariocaso_id, as: :hidden %>
    <%= f.input :id, as: :hidden %>
    <%= link_to_remove_association "Eliminar", f, 
      :class => 'btn-danger', "data-existing" => true %>
    <div><%= f.error_notification %></div>
  </td>
</tr>

