<div class="row">
  <div class="col-md-6">
    <%= f.input :id, readonly: true%>
  </div>
  <div class="col-md-6">
    <%= s.input :fecharec, 
      as: :string, 
      input_html: {
        "data-behaviour" => "datepicker",
        "data-toggle" => 'tooltip',
        "title" => 'Fecha inicial de atención al caso'
      } %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% colus= current_usuario.oficina_id ? 
      Usuario.where(oficina_id: current_usuario.oficina_id).
      order('LOWER(nusuario)') :
      Usuario.order('LOWER(nusuario)') %>
    <%= s.association :usuario,
      collection: colus,
      include_blank: false,
      label_method: :nusuario, 
      value_method: :id %>
  </div>
  <div class="col-md-6">
    <% colof= current_usuario.oficina_id ? 
      Sip::Oficina.habilitados.where(id: current_usuario.oficina_id) :
      Sip::Oficina.habilitados %>
    <%= s.association :oficina,
      collection: colof,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id,
      input_html: {
        "data-toggle" => 'tooltip',
        "title" => 'Oficina del SJR que reporta el caso'
      } %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= f.input :fecha,
      as: :string, 
      wrapper_html: { style: "padding-bottom: 18px;" },
      input_html: {
        "data-behaviour" => "datepicker",
        "data-toggle" => 'tooltip',
        "title" => 'Fecha en la que el solicitante sufrió el ' + 
        'desplazamiento principal'
      } %>
  </div>
  <div class="col-md-6">
    <%= render partial: 'basicos_pie', locals: {f: f, s: s} %>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= s.input :numregfamilia %>
  </div>
  <div class="col-md-6">
    <%= s.input :fechafinaliza,
      as: :string, 
      wrapper_html: { style: "padding-bottom: 18px;" },
      input_html: {
        "data-behaviour" => "datepicker",
        "data-toggle" => 'tooltip',
        "title" => 'Fecha cuando finaliza el procedimiento'
      } %>
  </div>
</div>    

<div class="row">
  <div class="col-md-6">
    <%= s.association :estadocaso,
      collection: ::Estadocaso.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id %>
  </div>
  <div class="col-md-6">
  </div>
</div>

